<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <style>
            span.user-id {
                font-style: italic;
            }
        </style>
    </head>
    <body>
        <ul>
            <% for (var i = 0; i < allposts.length; i++) { %>
                <%  var post = allposts[i];
                    var commentList = post.comments.comment_list; %>
                <li>
                    <%  var userIndex = users.indices.indexOf(post.actor_id); %>
                    <% if (userIndex >= 0) { %>
                        <span class="user-id"><%= users.users[userIndex].name %>: </span>
                    <% } %>
                    <span><%-: post.message | br %></span>
                    <ul>
                        <% for (var commentIndex = 0; commentIndex < commentList.length; commentIndex++) { %>
                            <li>
                                <%  var comment = commentList[commentIndex];
                                    var cUserIndex = users.indices.indexOf(comment.fromid) %>
                                <% if (cUserIndex >= 0) { %>
                                    <span class="user-id"><%= users.users[cUserIndex].name %>: </span>
                                <% } %>
                                <span><%-: comment.text | br %></span>
                            </li>
                        <% } %>
                    </ul>
                </li>
            <% } %>
        </ul>
    </body>
</html>
